<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:cardElevation="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="378dp"
                                                       android:layout_height="132dp">

        <TextView
                android:text="Teams"
                android:layout_width="123dp"
                android:layout_height="53dp"
                android:id="@+id/tv_team" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"/>
        <ImageView
                android:layout_width="107dp"
                android:layout_height="90dp" tools:srcCompat="@tools:sample/avatars[1]"
                android:id="@+id/iv_teamBadge"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.461"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>